---
import L from 'leaflet'; 
---



<section class="flex flex-col items-center justify-center px-6 lg:px-[8rem] py-5 lg:py-10">
  <h1 class="text-center text-[2.8rem] lg:text-[3.5rem] font-bold uppercase m-5 lg:m-10 bebas-neue-regular">Ubicación</h1>
    <div id="map" class="w-full h-96 shadow-black shadow-sm rounded-sm"></div>
</section>

<script type="module">
  // Establece la vista inicial en las coordenadas de Olavarría
 const map = L.map('map').setView([-36.8927, -60.3225], 17);

      // Añadir una capa de mapa desde OpenStreetMap
      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
      }).addTo(map);

      // Añadir un marcador
      const marker = L.marker([-36.8927, -60.3225]).addTo(map);
      marker.bindPopup('Alsina 2928, Olavarría').openPopup();
</script>
